@model BikeGround.Models.Login
@{
    ViewBag.Title = "Index";

    Type t = typeof(Login);
}

<div class="form-horizontal bglogin">
    <form id="LoginForm" name="LoginForm" ng-submit="LoginFormValidate(LoginForm.$valid, Login)" novalidate>
        <div class="form-group">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-lg-3" })
            <div class="col-lg-9" ng-class="{ 'has-error' : LoginForm.UserName.$invalid && !LoginForm.UserName.$pristine }">
                @(Html.Editor<Login, string>(x => x.UserName, t))
                @(Html.Required<Login, string>(x => x.UserName, t))
                @(Html.StringLength<Login, string>(x => x.UserName, t))
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-lg-3" })
            <div class="col-lg-9" ng-class="{ 'has-error' : LoginForm.Password.$invalid && !LoginForm.Password.$pristine }">
                @(Html.Editor<Login, string>(x => x.Password, t))
                @(Html.Required<Login, string>(x => x.Password, t))
                @(Html.StringLength<Login, string>(x => x.Password, t))
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-offset-3 col-lg-9">
                @(Html.Submit(BikeGround.Models.Resources.Global.Login))
            </div>
        </div>

        <ul>
            <li ng-repeat="(key, errors) in LoginForm.$error track by $index">
                <strong>{{ key }}</strong> errors
                <ul>
                    <li ng-repeat="e in errors">{{ e.$name }} has an error: <strong>{{ key }}</strong>.</li>
                </ul>
            </li>
        </ul>
    </form>
</div>
